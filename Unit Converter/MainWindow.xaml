<Window x:Class="Unit_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unit_Converter"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Конвентер длины и температуры" Margin="0,0,0,20" FontSize="26" FontWeight="ExtraLight" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Категория: " VerticalAlignment="Center" Margin="0,0,10,0" FontSize="16"/>
            <RadioButton x:Name="RButton1" IsChecked="True" Margin="0,0,10,0" Checked="RButton1_Selected">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/images/ruler.png" Width="30" Height="30" Margin="0,0,5,0"/>
                    <TextBlock Text="Длина" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
            <RadioButton x:Name="RButton2" Checked="RButton2_Selected" Margin="10,0,5,0" >
                <StackPanel Orientation="Horizontal">
                    <Image Source="/images/tempa.png" Width="30" Height="30" Margin="0,0,5,0"/>
                    <TextBlock Text="Температура" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Число: " VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="Value" Width="190" HorizontalAlignment="Left" TextChanged="Value_TextChenged"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Из: " VerticalAlignment="Center" Width="40"/>
            <ComboBox x:Name= "From" Width="200" HorizontalAlignment="Left" SelectionChanged="From_Selected"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="В: " VerticalAlignment="Center" Width="40"/>
            <ComboBox x:Name="To" Width="200" HorizontalAlignment="Left" SelectionChanged="To_Selected"/>
        </StackPanel>

        <Button Grid.Row="5" x:Name="Start" Content="Конвертировать" Width="150" Height="30" HorizontalAlignment="Center" Margin="0,0,0,20" Click="Start_Click"/>

        <TextBlock Grid.Row="6" x:Name="Result" FontSize="18" FontWeight="ExtraBold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        
    </Grid>
</Window>
